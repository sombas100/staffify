{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "strict": true, // Enables all strict type-checking options
    "esModuleInterop": true, // Enables compatibility between ES6 modules and CommonJS
    "moduleResolution": "node", // Helps TypeScript find modules
    "forceConsistentCasingInFileNames": true, // Ensures consistent file naming
    "outDir": "./dist", // Output directory for compiled files
    "rootDir": "./src", // Root directory of your source files
    "sourceMap": true, // Generates source maps for easier debugging
    "jsx": "react-jsx"
  },
  "include": ["src/**/*.ts", "src/**/*.tsx"],
  "exclude": ["node_modules", "dist"],

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true
  ,
  
  "references": [{ "path": "./tsconfig.node.json" }]
}
